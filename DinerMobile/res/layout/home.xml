<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@drawable/fondo">
    <!-- android:background="#EAF5FD">  -->

    <Button
        android:id="@+id/showTablesButton"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="@string/showTables"
        android:layout_marginTop="110dp"
        android:drawableLeft="@drawable/table_distribution"
        android:onClick="showTables"/>

    <Button
        android:id="@+id/listTablesButton"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="@string/listTables"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/table_list"
        android:onClick="listTables"/>
 
</LinearLayout>
