<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/floorGridImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    
    <TextView
        android:id="@+id/floorGridTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/floorGridImageView"
        android:layout_alignTop="@+id/floorGridImageView"
        android:layout_alignRight="@+id/floorGridImageView"
        android:layout_alignBottom="@+id/floorGridImageView"
        android:layout_margin="4dp"
        android:gravity="center"/>

</RelativeLayout >
